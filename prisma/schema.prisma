// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model UserRol {
    userId String @id
    roleId String
    Role   Role   @relation(fields: [roleId], references: [id])
}

model Role {
    id        String    @id @default(cuid())
    name      String    @unique
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    UserRol   UserRol[]
}

model Client {
    id        String   @id @default(cuid())
    fname     String
    lname     String
    email     String   @unique
    phone     String
    address   String
    rut       String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    Order     Order[]
}

model Order {
    id             String        @id @default(cuid())
    client         Client        @relation(fields: [clientId], references: [id])
    clientId       String
    createdAt      DateTime      @default(now())
    updatedAt      DateTime      @updatedAt
    OrderData      OrderDetail?  @relation(fields: [orderDataId], references: [id])
    OrderPayment   OrderPayment? @relation(fields: [orderPaymentId], references: [id])
    orderDataId    String?
    orderPaymentId String?
}

model OrderDetail {
    id              String   @id @default(cuid())
    orderId         String
    checkin         DateTime
    checkout        DateTime
    ticket          String
    details         String
    external        Boolean
    externalDetails String
    createdAt       DateTime @default(now())
    updatedAt       DateTime @updatedAt
    updatedBy       String
    orderDataId     String   @unique
    Order           Order[]
}

model OrderPayment {
    id             String   @id @default(cuid())
    orderId        String
    amount         Int
    shippingCost   Int
    paymentDate    DateTime
    paymentMethod  String
    paymentType    String
    status         String
    invoiceNumber  String
    paymentDetails String
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt
    orderPaymentId String   @unique
    Order          Order[]
}
